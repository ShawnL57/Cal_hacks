{
    "manifest_version": 3,
    "name": "Annoying Duck",
    "version": "1.0",
    "description": "An annoying duck built with TypeScript!",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:3030/*",
        "ws://127.0.0.1:3030/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "duck.png",
            "48": "duck.png",
            "128": "duck.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/content.js"
            ]
        }
    ],
    "icons": {
        "16": "duck.png",
        "48": "duck.png",
        "128": "duck.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["duck.png", "duck-walking.gif"],
            "matches": ["<all_urls>"]
        }
    ]
}